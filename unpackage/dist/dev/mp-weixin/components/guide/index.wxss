
page,
.content {
	width: 100%;
	height: 100%;
	background-size: 100% auto;
	padding: 0;
}
.swiper {
	width: 100%;
	height: 100vh;
	background: #FFFFFF;
}
.swiper-item {
	width: 100%;
	height: 100%;
	text-align: center;
	position: relative;
	display: flex;
	/* justify-content: center; */
	align-items: flex-end;
	flex-direction: column-reverse
}
.swiper-item-img {
	width: 100%;
	height: 100vh;
	margin: 0 auto;
}
.swiper-item-img image {
	width: 100%;
	height: 100%;
}
.uniapp-img {
	height: 50%;
	background: #FFFFFF;
	display: flex;
	justify-content: center;
	align-items: center;
	overflow: hidden;
}
.uniapp-img image {
	width: 40%;
}
.jump-over,
.experience {
	position: absolute;
	height: 45rpx;
	line-height: 45rpx;
	padding: 0 15rpx;
	border-radius: 30rpx;
	font-size: 24rpx;
	color: #b09e9a;
	border: 1px solid #b09e9a;
	z-index: 999;
}
.jump-over {
	right: 30rpx;
	top: 80rpx;
}
.experience {
	right: 50%;
	margin-right: -105rpx;
	bottom: 80rpx;
}

